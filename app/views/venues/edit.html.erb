<header class="w3-container w3-center w3-padding-32"> 
  <h2 class="w3-wide"><i class="fa fa-music w3-margin-right"></i>Edit Venue</h2>
</header>
<div class="w3-container">
  <%= form_for @venue do |f| %>
  <div style="float: left; width: 49%">
    <label> Venue Name <span class="w3-opacity w3-center"><i>(Required)</i></span></label>
    <%= f.text_field :name, class: "w3-input w3-border", placeholder: 'Venue Name' %><br>
    <label>Address</label> 
    <%= f.text_area :address, class: "w3-input w3-border", placeholder: 'Address' %><br>
  </div>
  <div style="float: right; width: 49%">
    <label>Phone Number</label> 
    <%= f.phone_field :phone, class: "w3-input w3-border", placeholder: 'Phone Number' %><br>
    <label>Email</label>
    <%= f.email_field :email, class: "w3-input w3-border", placeholder: 'Email' %><br>
    <label>Booking Agent</label>
    <%= f.text_field :poc, class: "w3-input w3-border", placeholder: 'Booking Agent' %><br>
  </div>
  <div style="clear: both; width: 100%">
    <label>Description</label>
    <%= f.text_area :description, class: "w3-input w3-border", placeholder: 'Description' %><br>
    <label>Related Links</label>
    <%= f.url_field :link, class: "w3-input w3-border", placeholder: 'Related Links' %><br><br>
    <%= f.submit "Save Changes", class: 'w3-button w3-black w3-margin-bottom' %>
    <% end %> 
    <%= link_to 'Delete', venue_path(@venue), method: :delete, data: {confirm: 'Are you sure?'}, class: "w3-button w3-red w3-margin-bottom" %>
    <%= link_to 'Cancel', venue_path(@venue), class: "w3-button w3-red w3-margin-bottom" %>
</div>
