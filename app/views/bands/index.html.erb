<header class="w3-container w3-center w3-padding-32"> 
  <h2 class="w3-wide"><i class="fa fa-music w3-margin-right"></i>Bands</h2>
</header>
<div class="w3-container w3-content w3-center w3-padding-64">
<div class="w3-row-padding">
  <div class="w3-card white">
    <div class="w3-container w3-black">
      <h3>Explore Bands</h3>
    </div>
    <% @bands.each do |band| %>
    <ul class="w3-ul w3-border-top">
      <li>
        <h3><%= link_to band.name, band, style:"text-decoration:none" %></h3>
        <p><%= band.genre %></p>
      </li>
    <% end %>
    </ul>
    <div class="w3-container w3-black w3-large"><span class="w3-right"><%= link_to 'Add Band', new_band_path, style:"text-decoration:none"%></span></div>
  </div>
</div>







